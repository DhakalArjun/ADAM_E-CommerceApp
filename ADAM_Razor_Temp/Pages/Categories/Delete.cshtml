@page
@model ADAM_Razor_Temp.Pages.Categories.DeleteModel

<form method="post" class="col-md-6">
    <h3>Edit Category</h3>
    <hr class="mb-5" />
    <input asp-for="Category.CategoryId" type="hidden" value="@Model.Category.CategoryId" />
    <div class="mb-3">
        <label asp-for="Category.Name" class="form-label"></label>
        <input asp-for="Category.Name" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label asp-for="Category.DisplayOrder" class="form-label"></label>
        <input asp-for="Category.DisplayOrder" class="form-control" disabled>
    </div>
    <button type="submit" class="btn btn-danger" style="width:120px">Delete</button>
    <a asp-page="/Categories/Index" class="btn btn-outline-secondary px-2" style="width:120px">Back</a>
</form>