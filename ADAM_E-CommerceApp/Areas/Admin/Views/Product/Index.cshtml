@model List<Product>



<div class="text-end mt-4">
    @*Here we don't need to declare asp-controller if it is default controller i.e. same controller as this view, but lets leave it to be explicit*@
    <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary my-2"><i class="bi bi-plus-square-fill"></i>&nbsp; Create Product</a>
</div>


