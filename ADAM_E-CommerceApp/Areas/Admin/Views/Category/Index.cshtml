@model List<Category>



<div class="text-end mt-4">
    @*Here we don't need to declare asp-controller if it is default controller i.e. same controller as this view, but lets leave it to be explicit*@
    <a asp-controller="Category" asp-action="Create" class="btn btn-primary my-2"><i class="bi bi-plus-square-fill"></i>&nbsp; Create Category</a>
</div>


<div class="card shadow border-0 mb-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-1">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-2">Category List</h3>
            </div>
        </div>
    </div>
    <div class="card-body p-4"> 
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(u => u.DisplayOrder))
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.DisplayOrder</td>
                        <td>
                            <div class="py-0 text-center">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-outline-primary btn-sm mx-2 mb-0 py-0" style="width:80px"><i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-outline-danger btn-sm mx-2 py-0" style="width:80px"><i class="bi bi-trash"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

