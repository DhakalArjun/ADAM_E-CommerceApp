@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-1">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-2">Edit Category</h3>  
            </div>
        </div>

    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="CategoryId" type="hidden" value="@Model.CategoryId" />
            @*Note: above hidden field is not required if passed variable name is same as property name*@
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="mb-3 form-floating">
                <input asp-for="Name" class="form-control">
                <label asp-for="Name" class="mx-2"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 form-floating">
                <input asp-for="DisplayOrder" class="form-control">
                <label asp-for="DisplayOrder" class="mx-2"></label>
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-primary" style="width:120px">Update</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary mx-2" style="width:120px">Back</a>
            </div>
            
        </form>        
    </div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
@* Note: We need above syntax as this partial view is script related else we can directly partial view as
     <partial name="_ValidationScriptsPartial"/>
*@

