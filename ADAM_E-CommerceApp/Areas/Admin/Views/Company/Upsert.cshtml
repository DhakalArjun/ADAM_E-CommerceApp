@model Company

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-1">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-2">@(Model != null &&  Model.CompanyId != 0 ? "Update" : "Create") Company</h3>

            </div>
        </div>

    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            @if (Model != null && Model.CompanyId != 0)
            {
                <input asp-for="CompanyId" hidden />  
            }
            
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="row">   
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="CompanyName" class="form-control">
                        <label asp-for="CompanyName" class="mx-3"></label>
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>                    
                    <div class="form-floating mb-3">
                        <input asp-for="StreetAddress" class="form-control">
                        <label asp-for="StreetAddress" class="mx-3"></label>
                        <span asp-validation-for="StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="City" class="form-control">
                        <label asp-for="City" class="mx-3"></label>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>                   
                    <div class="form-floating mb-3">
                        <input asp-for="State" class="form-control">
                        <label asp-for="State" class="mx-3"></label>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="PostalCode" class="form-control">
                        <label asp-for="PostalCode" class="mx-3"></label>
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="PhoneNumber" class="form-control">
                        <label asp-for="PhoneNumber" class="mx-3"></label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>                    
                    <div>
                        <button type="submit" class="btn btn-primary" style="width:120px">@(Model != null && Model.CompanyId != 0 ? "Update" : "Create")</button>
                        <a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary mx-3" style="width:120px">Back</a>
                    </div>                              
            </div>   
        </form>
    </div>
</div>
@section Scripts{  
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
} 

