@model List<Company>



<div class="text-end mt-4">
    @*Here we don't need to declare asp-controller if it is default controller i.e. same controller as this view, but lets leave it to be explicit*@
    <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary my-2"><i class="bi bi-plus-square-fill"></i>&nbsp; Create Company</a>
</div>


<div class="card shadow border-0 mb-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-1">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-2">Company List</h3>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <table id="tblData" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Company Name</th>                   
                    <th>Street Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Postal Code</th>
                    <th>Phone Number</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>            
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/Company.js"></script>
}

