@model Category

<form method="post" class="col-md-6">
    <h3>Edit Category</h3>
    <hr class="mb-5" />
    <input asp-for="CategoryId" type="hidden" value="@Model.CategoryId" />   
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" disabled>       
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder" class="form-label"></label>
        <input asp-for="DisplayOrder" class="form-control" disabled>       
    </div>
    <button type="submit" class="btn btn-danger" style="width:120px">Delete</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary px-2" style="width:120px">Back</a>
</form>

