@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-1">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-2">Delete Category</h3>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">                
            <input asp-for="CategoryId" type="hidden" value="@Model.CategoryId" />
            <div class="mb-3 form-floating">
                <input asp-for="Name" class="form-control" disabled>
                <label asp-for="Name" class="mx-2"></label>
            </div>
            <div class="mb-3 form-floating">
                <input asp-for="DisplayOrder" class="form-control" disabled>
                <label asp-for="DisplayOrder" class="mx-2"></label>
            </div>
            <div>
                <button type="submit" class="btn btn-danger" style="width:120px">Delete</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary mx-2" style="width:120px">Back</a>
            </div>           
        </form>
    </div>
</div>

