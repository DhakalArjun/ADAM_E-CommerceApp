@model List<Category>


<div class="container d-flex justify-content-between px-0">
    <div class="col-6">
        <h3>Category List</h3>
    </div>
    <div class="col-6 text-end">
        @*Here we don't need to declare asp-controller if it is default controller i.e. same controller as this view, but lets leave it to be explicit*@
        <a asp-controller="Category" asp-action="Create" class="btn btn-warning my-2"><i class="bi bi-plus-square-fill"></i> Create Category</a>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th class="text-center">Action</th>
        </tr>       
    </thead>
    <tbody>
        @foreach(var item in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <div class="py-0 text-center">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-outline-primary btn-sm mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-outline-danger btn-sm mx-2"><i class="bi bi-trash"></i> Delete</a>
                    </div>
                </td>
            </tr>            
        }        
    </tbody>
</table>